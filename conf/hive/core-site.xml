<?xml version="1.0"?>
<configuration>

    <!-- Configure Hive to use Hadoop's S3A file system implementation for the "s3" scheme -->
    <property>
        <name>fs.s3.impl</name>
        <value>org.apache.hadoop.fs.s3a.S3AFileSystem</value>
    </property>

    <!-- Configure the S3A file system implementation to access Backblaze B2 -->
