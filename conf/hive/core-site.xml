    </property>

    <property>
        <name>fs.s3a.access.key</name>
        <value>0045f0571db506a0000000017</value>
    </property>

    <property>
        <name>fs.s3a.secret.key</name>
        <value>K004Fs/bgmTk5dgo6GAVm2Waj3Ka+TE</value>
    </property>

</configuration>
